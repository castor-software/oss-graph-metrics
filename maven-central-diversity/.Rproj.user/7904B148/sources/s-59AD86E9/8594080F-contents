  for (j in 1:length(PALib)) {
    if (PALib[j] == "A") {
      PosA <- c(PosA, j / length(PALib))
    }
    # else{#is passive
    # PosP <- c(PosP, j / length(PALib))
    # }
  }
}
  
data.frame(PosA = PosA) %>% 
  ggplot(aes(PosA)) +
  geom_histogram() +
geom_histogram(bins = 30, color="black", fill = "#CCCCCC") +
   ylab("count") +
   xlab("relative position of active versions")

