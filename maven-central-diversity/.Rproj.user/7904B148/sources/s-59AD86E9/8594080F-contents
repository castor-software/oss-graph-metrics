# position of the active versions
PAList <- df_patterns$PAList
PosA <- c()
PosP <- c()
for (i in 1:length(PAList)) {
  PALib <- PAList[i][[1]]
  for (j in 1:length(PALib)) {
    if (PALib[j] == "A") {
      PosA <- c(PosA, j / length(PALib))
    }
    # else{#is passive
    #   PosP <- c(PosP, j / length(PALib))
    # }
  }
}

